pipeline {
    agent any
    tools {
          maven 'Maven3'
    }

    stages {

        stage('SCM-pull') {
            steps {
                git branch: 'main', url: 'https://github.com/mallannabiradar123/devops-demo.git'
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean -f /opt/myfirstapp/pom.xml' 
            }
        }
        
        stage('Test') {
            steps {
                echo 'Hello World'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Hello World'
            }
        }
        
    }
}
