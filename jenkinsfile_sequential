pipeline {
    agent any

    stages {

        stage('SCM-pull') {
            steps {
                git branch: 'main', url: 'https://github.com/mallannabiradar123/devops-demo.git'
            }
        }
        
        stage('Build') {
            steps {
                echo 'Hello World'
            }
        }
        
        stage('Test') {
            steps {
                echo 'Hello World'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Hello World'
            }
        }
        
    }
}
